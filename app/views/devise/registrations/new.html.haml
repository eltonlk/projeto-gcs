.row.justify-content-center
  .col{ style: 'max-width: 450px;' }
    .card.my-5
      .card-body
        %h4.card-title.text-center.my-4= app_title

        = simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { autocomplete: "off" }  do |f|
          = f.error_notification

          = f.input :name, input_html: { autocomplete: "no" }

          = f.input :email, required: true, input_html: { autocomplete: "no" }

          = f.input :password, required: true, input_html: { autocomplete: "no" }

          = f.input :password_confirmation, required: true, input_html: { autocomplete: "no" }

          = f.button :submit, t('text.sign_up')


    = render "devise/shared/links"
